<UserControl x:Class="AudioProcessorAndStreamer.Controls.OscilloscopeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="100" d:DesignWidth="200"
             ClipToBounds="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="#404040" BorderThickness="1" Background="#1A1A1A" CornerRadius="2">
            <Grid>
                <Image x:Name="WaveformImage" Stretch="Fill" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                <TextBlock x:Name="LabelText"
                           Text="{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           Foreground="#808080"
                           FontSize="10"
                           Margin="4,2"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Left"/>
            </Grid>
        </Border>

        <!-- Buffer fill bar -->
        <Grid Grid.Row="1" x:Name="BufferBarContainer" Height="6" Margin="0,2,0,0">
            <Border Background="#333333" CornerRadius="2"/>
            <Border x:Name="BufferFillBar" Background="#32CD32" CornerRadius="2" HorizontalAlignment="Left" Width="0"/>
        </Grid>
    </Grid>
</UserControl>
