<UserControl x:Class="AudioProcessorAndStreamer.Controls.SpectrumAnalyzerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="80" d:DesignWidth="400">
    <Grid HorizontalAlignment="Center">
        <Border x:Name="AnalyzerBox"
                BorderBrush="#2A4A6A"
                BorderThickness="1"
                Background="#1A2A3A"
                CornerRadius="3"
                Padding="6,4,6,2"
                HorizontalAlignment="Center">
            <StackPanel>
                <Grid>
                    <Canvas x:Name="SpectrumCanvas" ClipToBounds="True"/>
                    <TextBlock x:Name="AnalyzerLabel"
                               Text=""
                               Foreground="#5080B0"
                               FontSize="8"
                               FontWeight="SemiBold"
                               Margin="2,1,0,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"/>
                </Grid>
                <ItemsControl x:Name="FrequencyLabels" HorizontalAlignment="Center" Margin="0,2,0,0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}"
                                       Foreground="#6090B0"
                                       FontSize="7"
                                       Width="17"
                                       TextAlignment="Center"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
