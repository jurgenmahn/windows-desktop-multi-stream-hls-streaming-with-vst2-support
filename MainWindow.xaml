<Window x:Class="AudioProcessorAndStreamer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:AudioProcessorAndStreamer.Controls"
        xmlns:vm="clr-namespace:AudioProcessorAndStreamer.ViewModels"
        xmlns:infra="clr-namespace:AudioProcessorAndStreamer.Infrastructure"
        mc:Ignorable="d"
        Title="Audio Processor and Streamer"
        Height="600" Width="900"
        MinHeight="400" MinWidth="600"
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen"
        d:DataContext="{d:DesignInstance vm:MainWindowViewModel}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <infra:InvertBoolConverter x:Key="InvertBool"/>
        <infra:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>

        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#106EBE"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StopButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#D13438"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Border Grid.Row="0" Background="#F0F0F0" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="4">
            <StackPanel Orientation="Horizontal">
                <Button Content="File" Style="{StaticResource MenuButtonStyle}"/>
                <Button Content="Configuration" Style="{StaticResource MenuButtonStyle}"
                        Command="{Binding OpenConfigurationCommand}"/>
                <Button Content="About" Style="{StaticResource MenuButtonStyle}"
                        Command="{Binding OpenAboutCommand}"/>
            </StackPanel>
        </Border>

        <!-- Toolbar -->
        <Border Grid.Row="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo -->
                <Image Grid.Column="0" MaxHeight="50" Stretch="Uniform" Margin="0,0,16,0"
                       x:Name="AppLogo"/>

                <!-- Server status -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{Binding ServerStatus}" Foreground="#333333" FontSize="14"/>
                    <TextBlock Text="{Binding ServerUrl}" Foreground="#0078D4" FontSize="12"
                               Visibility="{Binding IsServerRunning, Converter={StaticResource BoolToVis}}"/>
                </StackPanel>

                <!-- Action buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Web Server:" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="#666666"/>
                    <Button Content="Start" Style="{StaticResource ActionButtonStyle}"
                            Command="{Binding StartServerCommand}"
                            IsEnabled="{Binding IsServerRunning, Converter={StaticResource InvertBool}}"
                            ToolTip="Start the HLS web server"/>
                    <Button Content="Stop" Style="{StaticResource StopButtonStyle}"
                            Command="{Binding StopServerCommand}"
                            IsEnabled="{Binding IsServerRunning}"
                            ToolTip="Stop the HLS web server"/>
                    <Border Width="1" Background="#E0E0E0" Margin="12,4"/>
                    <TextBlock Text="Streams:" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="#666666"/>
                    <Button Content="Start All" Style="{StaticResource ActionButtonStyle}"
                            Command="{Binding StartAllStreamsCommand}"
                            ToolTip="Start all configured audio streams"/>
                    <Button Content="Stop All" Style="{StaticResource StopButtonStyle}"
                            Command="{Binding StopAllStreamsCommand}"
                            ToolTip="Stop all running audio streams"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Streams list -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="8">
            <ItemsControl ItemsSource="{Binding Streams}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type vm:StreamViewModel}">
                        <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Margin="0,4" Padding="12"
                                Loaded="StreamItem_Loaded">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Stream name and status -->
                                <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="{Binding Name}" Foreground="#333333" FontSize="16" FontWeight="SemiBold"
                                               VerticalAlignment="Center" Margin="0,0,16,0"/>
                                    <controls:StatusIndicator IsActive="{Binding IsRunning}"/>
                                </StackPanel>

                                <!-- Stream controls -->
                                <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Content="Start" Style="{StaticResource ActionButtonStyle}"
                                            Command="{Binding StartCommand}"
                                            IsEnabled="{Binding IsRunning, Converter={StaticResource InvertBool}}"
                                            Padding="12,6"/>
                                    <Button Content="Stop" Style="{StaticResource StopButtonStyle}"
                                            Command="{Binding StopCommand}"
                                            IsEnabled="{Binding IsRunning}"
                                            Padding="12,6"/>
                                </StackPanel>

                                <!-- Oscilloscopes -->
                                <Grid Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <controls:OscilloscopeControl Grid.Column="0" Grid.Row="0" Height="50" Label="Input"
                                                                   Tag="InputScope"/>
                                    <controls:OscilloscopeControl Grid.Column="2" Grid.Row="0" Height="50" Label="Output"
                                                                   WaveformColor="#0078D4" Tag="OutputScope"/>

                                    <CheckBox Grid.Column="2" Grid.Row="1"
                                              Content="Bypass VST"
                                              IsChecked="{Binding VstBypassed}"
                                              Margin="0,4,0,0"
                                              Foreground="#666666"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Status bar -->
        <Border Grid.Row="3" Background="#0078D4" Padding="8,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Foreground="White" FontSize="12">
                    <Run Text="Streams: "/>
                    <Run Text="{Binding Streams.Count, Mode=OneWay}"/>
                </TextBlock>

                <!-- Listener counts (only shown when there are listeners) -->
                <TextBlock Grid.Column="1" Foreground="White" FontSize="12" HorizontalAlignment="Right"
                           Visibility="{Binding ListenerStatus, Converter={StaticResource StringToVisibilityConverter}}">
                    <Run Text="Listeners: "/>
                    <Run Text="{Binding ListenerStatus, Mode=OneWay}"/>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</Window>
