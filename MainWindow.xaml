<Window x:Class="AudioProcessorAndStreamer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:AudioProcessorAndStreamer.Controls"
        xmlns:vm="clr-namespace:AudioProcessorAndStreamer.ViewModels"
        xmlns:infra="clr-namespace:AudioProcessorAndStreamer.Infrastructure"
        mc:Ignorable="d"
        Title="Audio Processor and Streamer"
        Height="600" Width="900"
        MinHeight="400" MinWidth="600"
        Background="#2D2D30"
        WindowStartupLocation="CenterScreen"
        d:DataContext="{d:DesignInstance vm:MainWindowViewModel}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <infra:InvertBoolConverter x:Key="InvertBool"/>

        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3E3E42"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0E639C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1177BB"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#4D4D4D"/>
                                <Setter Property="Foreground" Value="#808080"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StopButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#C42B1C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Border Grid.Row="0" Background="#1E1E1E" Padding="4">
            <StackPanel Orientation="Horizontal">
                <Button Content="File" Style="{StaticResource MenuButtonStyle}"/>
                <Button Content="Configuration" Style="{StaticResource MenuButtonStyle}"
                        Command="{Binding OpenConfigurationCommand}"/>
                <Button Content="About" Style="{StaticResource MenuButtonStyle}"/>
            </StackPanel>
        </Border>

        <!-- Toolbar -->
        <Border Grid.Row="1" Background="#333337" Padding="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo placeholder -->
                <Border Grid.Column="0" Width="48" Height="48" Background="#404040" CornerRadius="4" Margin="0,0,16,0">
                    <TextBlock Text="HLS" Foreground="White" FontWeight="Bold"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <!-- Server status -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{Binding ServerStatus}" Foreground="#CCCCCC" FontSize="14"/>
                    <TextBlock Text="{Binding ServerUrl}" Foreground="#0E9FFF" FontSize="12"
                               Visibility="{Binding IsServerRunning, Converter={StaticResource BoolToVis}}"/>
                </StackPanel>

                <!-- Action buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="Start Server" Style="{StaticResource ActionButtonStyle}"
                            Command="{Binding StartServerCommand}"
                            IsEnabled="{Binding IsServerRunning, Converter={StaticResource InvertBool}}"/>
                    <Button Content="Stop Server" Style="{StaticResource StopButtonStyle}"
                            Command="{Binding StopServerCommand}"
                            IsEnabled="{Binding IsServerRunning}"/>
                    <Border Width="1" Background="#555555" Margin="8,4"/>
                    <Button Content="Start All" Style="{StaticResource ActionButtonStyle}"
                            Command="{Binding StartAllStreamsCommand}"/>
                    <Button Content="Stop All" Style="{StaticResource StopButtonStyle}"
                            Command="{Binding StopAllStreamsCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Streams list -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="8">
            <ItemsControl ItemsSource="{Binding Streams}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type vm:StreamViewModel}">
                        <Border Background="#3C3C3C" CornerRadius="4" Margin="0,4" Padding="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Stream name and status -->
                                <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="{Binding Name}" Foreground="White" FontSize="16" FontWeight="SemiBold"
                                               VerticalAlignment="Center" Margin="0,0,16,0"/>
                                    <controls:StatusIndicator IsActive="{Binding IsRunning}"/>
                                </StackPanel>

                                <!-- Stream controls -->
                                <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Content="Start" Style="{StaticResource ActionButtonStyle}"
                                            Command="{Binding StartCommand}"
                                            IsEnabled="{Binding IsRunning, Converter={StaticResource InvertBool}}"
                                            Padding="12,6"/>
                                    <Button Content="Stop" Style="{StaticResource StopButtonStyle}"
                                            Command="{Binding StopCommand}"
                                            IsEnabled="{Binding IsRunning}"
                                            Padding="12,6"/>
                                </StackPanel>

                                <!-- Oscilloscopes -->
                                <Grid Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <controls:OscilloscopeControl Grid.Column="0" Height="80" Label="Input"
                                                                   x:Name="InputScope"/>
                                    <controls:OscilloscopeControl Grid.Column="2" Height="80" Label="Output"
                                                                   WaveformColor="#00AAFF"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Status bar -->
        <Border Grid.Row="3" Background="#007ACC" Padding="8,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Foreground="White" FontSize="12">
                    <Run Text="Streams: "/>
                    <Run Text="{Binding Streams.Count, Mode=OneWay}"/>
                </TextBlock>

                <Button Grid.Column="1" Content="+ Add Stream"
                        Background="Transparent" Foreground="White" BorderThickness="0"
                        Padding="8,2" Cursor="Hand"
                        Command="{Binding AddStreamCommand}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
