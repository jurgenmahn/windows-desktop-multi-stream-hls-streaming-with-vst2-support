<Window x:Class="AudioProcessorAndStreamer.Views.ConfigurationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:AudioProcessorAndStreamer.ViewModels"
        xmlns:infra="clr-namespace:AudioProcessorAndStreamer.Infrastructure"
        mc:Ignorable="d"
        Title="Stream Configuration"
        Height="600" Width="800"
        MinHeight="500" MinWidth="700"
        Background="#2D2D30"
        WindowStartupLocation="CenterOwner"
        d:DataContext="{d:DesignInstance vm:ConfigurationViewModel}">

    <Window.Resources>
        <infra:NotNullToBoolConverter x:Key="NotNullToBool"/>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#CCCCCC"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="Padding" Value="4"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="BorderBrush" Value="#555555"/>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#0E639C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="SmallButton" TargetType="Button">
            <Setter Property="Background" Value="#404040"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Streams List -->
        <Border Grid.Column="0" Grid.Row="0" Background="#252526" CornerRadius="4" Margin="0,0,8,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Streams" FontWeight="Bold" Margin="8"/>

                <ListBox Grid.Row="1" ItemsSource="{Binding Streams}"
                         SelectedItem="{Binding SelectedStream}"
                         Background="Transparent" BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" Foreground="White" Padding="4"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="4">
                    <Button Content="+" Style="{StaticResource SmallButton}" Width="30"
                            Command="{Binding AddStreamCommand}"/>
                    <Button Content="-" Style="{StaticResource SmallButton}" Width="30"
                            Command="{Binding RemoveStreamCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Stream Configuration -->
        <ScrollViewer Grid.Column="1" Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="8,0,0,0" IsEnabled="{Binding SelectedStream, Converter={StaticResource NotNullToBool}}">

                <!-- Stream Name -->
                <TextBlock Text="Stream Name" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <TextBox Text="{Binding SelectedStream.Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12"/>

                <!-- Stream Path -->
                <TextBlock Text="Stream Path (URL)" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <TextBox Text="{Binding SelectedStream.StreamPath, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12"/>

                <!-- Audio Input -->
                <TextBlock Text="Audio Input Device" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox Grid.Column="0" ItemsSource="{Binding AudioDevices}"
                              SelectedItem="{Binding SelectedAudioDevice}"
                              DisplayMemberPath="Name"/>
                    <Button Grid.Column="1" Content="Refresh" Style="{StaticResource SmallButton}"
                            Command="{Binding RefreshAudioDevicesCommand}"/>
                </Grid>

                <!-- Sample Rate -->
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,8,0">
                        <TextBlock Text="Sample Rate" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <ComboBox SelectedItem="{Binding SelectedStream.AudioInput.SampleRate}">
                            <ComboBoxItem Content="44100"/>
                            <ComboBoxItem Content="48000"/>
                            <ComboBoxItem Content="96000"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Buffer Size" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <ComboBox SelectedItem="{Binding SelectedStream.AudioInput.BufferSize}">
                            <ComboBoxItem Content="256"/>
                            <ComboBoxItem Content="512"/>
                            <ComboBoxItem Content="1024"/>
                            <ComboBoxItem Content="2048"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>

                <!-- VST Plugins -->
                <TextBlock Text="VST Plugins" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <Border Background="#252526" CornerRadius="4" Padding="8" Margin="0,0,0,12">
                    <StackPanel>
                        <ItemsControl ItemsSource="{Binding SelectedStream.VstPlugins}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding PluginName}" VerticalAlignment="Center"/>
                                        <Button Grid.Column="1" Content="X" Style="{StaticResource SmallButton}" Width="24"
                                                Command="{Binding DataContext.RemoveVstPluginCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <Button Content="Add VST Plugin..." Style="{StaticResource SmallButton}"
                                HorizontalAlignment="Left" Margin="0,8,0,0"
                                Command="{Binding BrowseVstPluginCommand}"/>
                    </StackPanel>
                </Border>

                <!-- Encoding Profiles -->
                <TextBlock Text="Encoding Profiles" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <Border Background="#252526" CornerRadius="4" Padding="8" Margin="0,0,0,12">
                    <StackPanel>
                        <ItemsControl ItemsSource="{Binding SelectedStream.EncodingProfiles}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#3C3C3C" CornerRadius="2" Padding="8" Margin="0,2">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox Grid.Column="0" Text="{Binding Name}" Margin="0,0,8,0"/>
                                            <ComboBox Grid.Column="1" SelectedItem="{Binding Codec}" Width="80" Margin="0,0,8,0">
                                                <ComboBoxItem Content="Aac"/>
                                                <ComboBoxItem Content="Mp3"/>
                                                <ComboBoxItem Content="Opus"/>
                                            </ComboBox>
                                            <TextBox Grid.Column="2" Text="{Binding Bitrate}" Width="80" Margin="0,0,8,0"/>
                                            <Button Grid.Column="3" Content="X" Style="{StaticResource SmallButton}" Width="24"
                                                    Command="{Binding DataContext.RemoveEncodingProfileCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <Button Content="Add Profile..." Style="{StaticResource SmallButton}"
                                HorizontalAlignment="Left" Margin="0,8,0,0"
                                Command="{Binding AddEncodingProfileCommand}"/>
                    </StackPanel>
                </Border>

                <!-- Logo -->
                <TextBlock Text="Stream Logo" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" Text="{Binding SelectedStream.LogoPath}" IsReadOnly="True"/>
                    <Button Grid.Column="1" Content="Browse..." Style="{StaticResource SmallButton}"
                            Command="{Binding BrowseLogoCommand}"/>
                </Grid>

            </StackPanel>
        </ScrollViewer>

        <!-- Global Settings and Buttons -->
        <Border Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Margin="0,16,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Global Settings -->
                <Border Grid.Row="0" Background="#252526" CornerRadius="4" Padding="12" Margin="0,0,0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="Base Domain" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding BaseDomain}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="0,0,8,0">
                            <TextBlock Text="Web Server Port" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding WebServerPort}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="HLS Output Directory" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding HlsOutputDirectory}"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Dialog Buttons -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Save" Style="{StaticResource ActionButton}" IsDefault="True"
                            Click="SaveButton_Click"/>
                    <Button Content="Cancel" Style="{StaticResource ActionButton}" IsCancel="True"
                            Click="CancelButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
