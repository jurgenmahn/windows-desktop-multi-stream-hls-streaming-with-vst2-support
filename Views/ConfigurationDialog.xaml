<Window x:Class="AudioProcessorAndStreamer.Views.ConfigurationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:vm="clr-namespace:AudioProcessorAndStreamer.ViewModels"
        xmlns:infra="clr-namespace:AudioProcessorAndStreamer.Infrastructure"
        xmlns:models="clr-namespace:AudioProcessorAndStreamer.Models"
        mc:Ignorable="d"
        Title="Stream Configuration"
        Height="600" Width="800"
        MinHeight="500" MinWidth="700"
        Background="#F5F5F5"
        WindowStartupLocation="CenterOwner"
        d:DataContext="{d:DesignInstance vm:ConfigurationViewModel}">

    <Window.Resources>
        <infra:NotNullToBoolConverter x:Key="NotNullToBool"/>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#333333"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="Padding" Value="4"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="SmallButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Streams List -->
        <Border Grid.Column="0" Grid.Row="0" Background="White" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="4" Margin="0,0,8,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Streams" FontWeight="Bold" Margin="8"/>

                <ListBox Grid.Row="1" ItemsSource="{Binding Streams}"
                         SelectedItem="{Binding SelectedStream}"
                         Background="Transparent" BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" Foreground="#333333" Padding="4"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="4">
                    <Button Content="+" Style="{StaticResource SmallButton}" Width="30"
                            Command="{Binding AddStreamCommand}"/>
                    <Button Content="-" Style="{StaticResource SmallButton}" Width="30"
                            Command="{Binding RemoveStreamCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Stream Configuration -->
        <ScrollViewer Grid.Column="1" Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="8,0,0,0" IsEnabled="{Binding SelectedStream, Converter={StaticResource NotNullToBool}}">

                <!-- Stream Name -->
                <TextBlock Text="Stream Name" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <TextBox Text="{Binding SelectedStream.Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12"/>

                <!-- Stream Path -->
                <TextBlock Text="Stream Path (URL)" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <TextBox Text="{Binding SelectedStream.StreamPath, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12"/>

                <!-- Stream Format -->
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,8,0">
                        <TextBlock Text="Stream Format" FontWeight="SemiBold" Margin="0,0,0,2"/>
                        <TextBlock Text="Protocol for streaming (HLS or DASH)" FontSize="10" Foreground="#666666" Margin="0,0,0,4"/>
                        <ComboBox SelectedValue="{Binding SelectedStream.StreamFormat}"
                                  SelectedValuePath="Tag"
                                  SelectionChanged="StreamFormat_SelectionChanged">
                            <ComboBoxItem Content="HLS (HTTP Live Streaming)" Tag="{x:Static models:StreamFormat.Hls}"/>
                            <ComboBoxItem Content="DASH (MPEG-DASH)" Tag="{x:Static models:StreamFormat.Dash}"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Container Format" FontWeight="SemiBold" Margin="0,0,0,2"/>
                        <TextBlock Text="Segment format (DASH requires fMP4)" FontSize="10" Foreground="#666666" Margin="0,0,0,4"/>
                        <ComboBox x:Name="ContainerFormatComboBox"
                                  SelectedValue="{Binding SelectedStream.ContainerFormat}"
                                  SelectedValuePath="Tag"
                                  SelectionChanged="ContainerFormat_SelectionChanged">
                            <ComboBoxItem Content="MPEG-TS (.ts segments)" Tag="{x:Static models:ContainerFormat.MpegTs}"/>
                            <ComboBoxItem Content="fMP4 (.m4s segments)" Tag="{x:Static models:ContainerFormat.Fmp4}"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>

                <!-- Audio Input -->
                <TextBlock Text="Audio Input Device" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox Grid.Column="0" ItemsSource="{Binding AudioDevices}"
                              SelectedItem="{Binding SelectedAudioDevice}"
                              DisplayMemberPath="Name"/>
                    <Button Grid.Column="1" Content="Refresh" Style="{StaticResource SmallButton}"
                            Command="{Binding RefreshAudioDevicesCommand}"/>
                </Grid>

                <!-- Sample Rate -->
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,8,0">
                        <TextBlock Text="Sample Rate" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <ComboBox SelectedValue="{Binding SelectedStream.AudioInput.SampleRate}"
                                  SelectedValuePath="Tag">
                            <ComboBoxItem Content="44100 Hz">
                                <ComboBoxItem.Tag>
                                    <sys:Int32>44100</sys:Int32>
                                </ComboBoxItem.Tag>
                            </ComboBoxItem>
                            <ComboBoxItem Content="48000 Hz">
                                <ComboBoxItem.Tag>
                                    <sys:Int32>48000</sys:Int32>
                                </ComboBoxItem.Tag>
                            </ComboBoxItem>
                            <ComboBoxItem Content="96000 Hz">
                                <ComboBoxItem.Tag>
                                    <sys:Int32>96000</sys:Int32>
                                </ComboBoxItem.Tag>
                            </ComboBoxItem>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Input Buffer Size" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <ComboBox SelectedValue="{Binding SelectedStream.AudioInput.BufferSize}"
                                  SelectedValuePath="Tag">
                            <ComboBoxItem Content="5ms (256 samples)">
                                <ComboBoxItem.Tag>
                                    <sys:Int32>256</sys:Int32>
                                </ComboBoxItem.Tag>
                            </ComboBoxItem>
                            <ComboBoxItem Content="10ms (512 samples)">
                                <ComboBoxItem.Tag>
                                    <sys:Int32>512</sys:Int32>
                                </ComboBoxItem.Tag>
                            </ComboBoxItem>
                            <ComboBoxItem Content="20ms (1024 samples)">
                                <ComboBoxItem.Tag>
                                    <sys:Int32>1024</sys:Int32>
                                </ComboBoxItem.Tag>
                            </ComboBoxItem>
                            <ComboBoxItem Content="40ms (2048 samples)">
                                <ComboBoxItem.Tag>
                                    <sys:Int32>2048</sys:Int32>
                                </ComboBoxItem.Tag>
                            </ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                </Grid>

                <!-- VST Plugins -->
                <TextBlock Text="VST Plugins" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <Border Background="White" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="4" Padding="8" Margin="0,0,0,12">
                    <StackPanel>
                        <ItemsControl ItemsSource="{Binding SelectedStream.VstPlugins}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F0F0F0" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="2" Padding="8" Margin="0,2">
                                        <StackPanel>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="{Binding PluginName}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                                                <Button Grid.Column="1" Content="X" Style="{StaticResource SmallButton}" Width="24"
                                                        Command="{Binding DataContext.RemoveVstPluginCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding}"/>
                                            </Grid>
                                            <Grid Margin="0,6,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Preset:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                <TextBox Grid.Column="1" Text="{Binding PresetFilePath}" IsReadOnly="True"
                                                         VerticalAlignment="Center"/>
                                                <Button Grid.Column="2" Content="Browse..." Style="{StaticResource SmallButton}"
                                                        Command="{Binding DataContext.BrowseVstPresetCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding}"/>
                                                <Button Grid.Column="3" Content="Clear" Style="{StaticResource SmallButton}"
                                                        Command="{Binding DataContext.ClearVstPresetCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding}"/>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <Button Content="Add VST Plugin..." Style="{StaticResource SmallButton}"
                                HorizontalAlignment="Left" Margin="0,8,0,0"
                                Command="{Binding BrowseVstPluginCommand}"/>
                    </StackPanel>
                </Border>

                <!-- Encoding Profiles -->
                <TextBlock Text="Encoding Profiles" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <Border Background="White" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="4" Padding="8" Margin="0,0,0,12">
                    <StackPanel>
                        <ItemsControl ItemsSource="{Binding SelectedStream.EncodingProfiles}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F0F0F0" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="2" Padding="8" Margin="0,2">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox Grid.Column="0" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,8,0"/>
                                            <ComboBox Grid.Column="1" Width="80" Margin="0,0,8,0"
                                                      SelectedValue="{Binding Codec}"
                                                      SelectedValuePath="Tag">
                                                <ComboBoxItem Content="AAC" Tag="{x:Static models:AudioCodec.Aac}"/>
                                                <ComboBoxItem Content="MP3" Tag="{x:Static models:AudioCodec.Mp3}"/>
                                                <ComboBoxItem Content="Opus" Tag="{x:Static models:AudioCodec.Opus}"/>
                                            </ComboBox>
                                            <TextBox Grid.Column="2" Text="{Binding Bitrate, UpdateSourceTrigger=PropertyChanged}" Width="80" Margin="0,0,8,0"/>
                                            <Button Grid.Column="3" Content="X" Style="{StaticResource SmallButton}" Width="24"
                                                    Command="{Binding DataContext.RemoveEncodingProfileCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <Button Content="Add Profile..." Style="{StaticResource SmallButton}"
                                HorizontalAlignment="Left" Margin="0,8,0,0"
                                Command="{Binding AddEncodingProfileCommand}"/>
                    </StackPanel>
                </Border>

                <!-- Logo -->
                <TextBlock Text="Stream Logo" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" Text="{Binding SelectedStream.LogoPath}" IsReadOnly="True"/>
                    <Button Grid.Column="1" Content="Browse..." Style="{StaticResource SmallButton}"
                            Command="{Binding BrowseLogoCommand}"/>
                </Grid>

            </StackPanel>
        </ScrollViewer>

        <!-- Global Settings and Buttons -->
        <Border Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Margin="0,16,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Global Settings -->
                <Border Grid.Row="0" Background="White" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="4" Padding="12" Margin="0,0,0,16">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                <TextBlock Text="Base Domain" FontWeight="SemiBold" Margin="0,0,0,2"/>
                                <TextBlock Text="Public URL with port (e.g., http://myradio.com:8080)" FontSize="10" Foreground="#666666" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding BaseDomain}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="0,0,8,0">
                                <TextBlock Text="Web Server Port" FontWeight="SemiBold" Margin="0,0,0,2"/>
                                <TextBlock Text="Local port for the HTTP server to listen on" FontSize="10" Foreground="#666666" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding WebServerPort}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Stream Output Directory" FontWeight="SemiBold" Margin="0,0,0,2"/>
                                <TextBlock Text="Folder for HLS/DASH stream files" FontSize="10" Foreground="#666666" Margin="0,0,0,4"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0" Text="{Binding HlsOutputDirectory}" IsReadOnly="True"/>
                                    <Button Grid.Column="1" Content="Browse..." Style="{StaticResource SmallButton}"
                                            Command="{Binding BrowseHlsOutputDirectoryCommand}"/>
                                </Grid>
                            </StackPanel>
                        </Grid>

                        <Grid Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                <TextBlock Text="Streams Page Path" FontWeight="SemiBold" Margin="0,0,0,2"/>
                                <TextBlock Text="URL path for the HTML streams listing page" FontSize="10" Foreground="#666666" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding StreamsPagePath}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="0,0,8,0">
                                <TextBlock Text="Monitor Output Device" FontWeight="SemiBold" Margin="0,0,0,2"/>
                                <TextBlock Text="Audio output for monitoring streams" FontSize="10" Foreground="#666666" Margin="0,0,0,4"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ComboBox Grid.Column="0" ItemsSource="{Binding OutputDevices}"
                                              SelectedItem="{Binding MonitorOutputDevice}">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding}" Value="">
                                                                    <Setter Property="Text" Value="(Default Device)"/>
                                                                    <Setter Property="Foreground" Value="#666666"/>
                                                                    <Setter Property="FontStyle" Value="Italic"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    <Button Grid.Column="1" Content="↻" Style="{StaticResource SmallButton}" Width="24"
                                            ToolTip="Refresh output devices"
                                            Command="{Binding RefreshOutputDevicesCommand}"/>
                                </Grid>
                            </StackPanel>

                            <StackPanel Grid.Column="2" VerticalAlignment="Bottom">
                                <CheckBox IsChecked="{Binding LazyProcessing}" Margin="0,0,0,4">
                                    <StackPanel>
                                        <TextBlock Text="Lazy Processing (On-Demand)" FontWeight="SemiBold"/>
                                        <TextBlock Text="Only process audio when listeners connect. Saves CPU but causes ~2s delay on first connect."
                                                   FontSize="10" Foreground="#666666" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </CheckBox>
                            </StackPanel>
                        </Grid>

                        <!-- Debug Audio -->
                        <Border BorderBrush="#FFB900" BorderThickness="1" CornerRadius="4" Padding="8" Margin="0,12,0,0"
                                Background="#FFFBF0">
                            <CheckBox IsChecked="{Binding DebugAudioEnabled}">
                                <StackPanel>
                                    <TextBlock Text="Enable Debug Audio Recording" FontWeight="SemiBold" Foreground="#996600"/>
                                    <TextBlock TextWrapping="Wrap" FontSize="10" Foreground="#666666" Margin="0,4,0,0">
                                        <Run Text="Creates WAV files in each stream's output folder for troubleshooting:"/>
                                        <LineBreak/>
                                        <Run Text="• debug_before_vst.wav - Raw audio from soundcard"/>
                                        <LineBreak/>
                                        <Run Text="• debug_input.wav - Audio after VST processing"/>
                                        <LineBreak/>
                                        <Run Text="• debug_output.wav - FFmpeg encoded output"/>
                                    </TextBlock>
                                    <TextBlock Text="⚠ Warning: These are uncompressed PCM files that grow continuously. Disable when not debugging to avoid filling up disk space."
                                               TextWrapping="Wrap" FontSize="10" Foreground="#CC6600" FontWeight="SemiBold" Margin="0,6,0,0"/>
                                </StackPanel>
                            </CheckBox>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Dialog Buttons -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Save" Style="{StaticResource ActionButton}" IsDefault="True"
                            Click="SaveButton_Click"/>
                    <Button Content="Cancel" Style="{StaticResource ActionButton}" IsCancel="True"
                            Click="CancelButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
