<Window x:Class="AudioProcessorAndStreamer.Views.DownloadProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Downloading Update"
        Height="160" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Background="#1A1A1A">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Status Text -->
        <TextBlock x:Name="StatusText"
                   Grid.Row="0"
                   Text="Downloading update..."
                   FontSize="14"
                   Foreground="#CCCCCC"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,16"/>

        <!-- Progress Bar -->
        <ProgressBar x:Name="ProgressBar"
                     Grid.Row="1"
                     Height="20"
                     Minimum="0"
                     Maximum="100"
                     Value="0"
                     Foreground="#0078D4"
                     Background="#333333"/>

        <!-- Percentage Text -->
        <TextBlock x:Name="PercentageText"
                   Grid.Row="2"
                   Text="0%"
                   FontSize="12"
                   Foreground="#808080"
                   HorizontalAlignment="Center"
                   Margin="0,8,0,0"/>
    </Grid>
</Window>
